
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.12 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
        <formats>
            <format>zip</format>
        </formats>
        <includeBaseDirectory>false</includeBaseDirectory>
        <fileSets>
            <fileSet>
                <directory>${project.basedir}/vars</directory>
                <filtered>true</filtered>
                <outputDirectory>vars</outputDirectory>
                <excludes>
                    <exclude>*-zip.xml</exclude>
                </excludes>
            </fileSet>
                <directory>${project.basedir}/vars</directory>
                <outputDirectory></outputDirectory>
                <excludes>
                    <exclude>*-zip</exclude>
                </excludes>
                <includes>
                    <include>*</include>
                </includes>
            <fileSet>
            </fileSet>
        </fileSets>
</assembly>